<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/toolbar_main"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary">
        <FrameLayout
            android:id="@+id/tabbutton1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_height"
            android:layout_weight="1"
            android:background="@drawable/toolbar_selector"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/tabtext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                />
            <View
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="@android:color/white"
                android:visibility="invisible"
                ></View>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/tabbutton2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_height"
            android:layout_weight="1"
            android:background="@drawable/toolbar_selector"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/tabtext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trending"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                />
            <View
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="@android:color/white"
                android:visibility="invisible"></View>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/tabbutton3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_height"
            android:layout_weight="1"
            android:background="@drawable/toolbar_selector"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/tabtext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Library"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                />
            <View
                android:id="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@android:color/white"
                android:layout_gravity="bottom"
                android:visibility="invisible"></View>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/tabbutton4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_height"
            android:layout_weight="1"
            android:background="@drawable/toolbar_selector"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/tabtext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My works"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                />
            <View
                android:id="@+id/line4"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="@android:color/white"
                android:visibility="invisible"></View>
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_below="@id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/card_frame">

        <android.support.v4.view.ViewPager
            android:id="@+id/vpPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v4.view.ViewPager>
    </FrameLayout>
</RelativeLayout>
